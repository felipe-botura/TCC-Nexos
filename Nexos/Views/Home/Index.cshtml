@{
    ViewData["Title"] = "Página Inicial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Slider Area Start-->
<div class="slider-area slider-bg">
    <div class="slider-active">
        <!-- Single Slider -->
        <div class="single-slider d-flex align-items-center slider-height">
            <div class="container">
                <div class="row align-items-center justify-content-between">
                    <div class="col-xl-5 col-lg-5 col-md-9">
                        <div class="hero__caption">
                            <h1 data-animation="fadeInLeft" data-delay=".6s">SUA MESA TE ESPERA</h1>
                            <p data-animation="fadeInLeft" data-delay=".8s">
                                Campanhas de todos os tipos, para todos os gostos, desde um bom e velho medieval,
                                até os mais variados Horrores Cómiscos.
                            </p>
                            <div class="slider-btns">
                                <a data-animation="fadeInLeft" data-delay="1s" href="@Url.Action("Index","Mesas")" class="border-btn">Explorar mesas</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="hero__img d-none d-lg-block f-right">
                            <img src="@(Url.Content("~/img/hero/hero_right.png"))" alt="" data-animation="fadeInRight" data-delay="1s" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Slider Area End-->

<!-- Domain-search start -->
<div class="domain-search-area section-bg1">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5">
                <h2>PROCURE O QUE VOCÊ TEM INTERESSE</h2>
            </div>
            <div class="col-xl-8 col-lg-7">
                <form action="#" class="search-box">
                    <div class="input-form">
                        <input type="text" placeholder="Pesquisar (Campanhas, sistemas, mestres, jogadores etc...)" />
                        <div class="search-form">
                            <button><i class="ti-search"></i></button>
                        </div>
                        <div class="world-form">
                            <img id="logo-pesquisa" src="@(Url.Content("~/img/logo/loderDark.png"))" alt="" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Domain-search End -->

<!-- Últimas Campanhas -->
<section class="latest-campaigns section-bg1 section-padding40">
    <div class="container">
        <div class="row justify-content-center mb-40">
            <div class="col-xl-6">
                <h2 class="section-title white-color text-center">Últimas Campanhas</h2>
            </div>
        </div>
        <div class="row gx-5 gy-5">
            <div class="col-lg-4 col-md-6">
                <div class="campaign-card">
                    <span class="tag">Fantasia</span>
                    <div class="card-img">
                        <img src="@(Url.Content("~/img/campaigns/placeholder2.png"))" alt="Cover Fantasia" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">O Princípio</h5>
                        <p class="card-meta">Mestre: Hemi Domiciano • Players: 5</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="campaign-card">
                    <span class="tag">Sci-Fi</span>
                    <div class="card-img">
                        <img src="@(Url.Content("~/img/campaigns/placeholder2.png"))" alt="Cover Sci-Fi" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Guerras Galácticas</h5>
                        <p class="card-meta">Mestre: Jane Smith • Players: 4</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="campaign-card">
                    <span class="tag">Mistério</span>
                    <div class="card-img">
                        <img src="@(Url.Content("~/img/campaigns/placeholder2.png"))" alt="Cover Mistério" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Cataclisma</h5>
                        <p class="card-meta">Mestre: Zelchi • Players: 6</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Últimas Campanhas End -->

<!-- Explore mais Mesas de RPG -->
<section class="more-campaigns section-padding40 section-bg1">
    <div class="container">
        <div class="row justify-content-center text-center mb-40">
            <div class="col-xl-8">
                <h2 class="section-title white-color">Explore mais Mesas de RPG</h2>
                <p class="white-color mb-30">Procure por toda a variedade de mesas criadas pelos nossos Mestres de RPG</p>
                <a href="@Url.Action("Index","Mesas")" class="border-btn">Ver todas as mesas</a>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10 mb-4">
                <div class="horizontal-card">
                    <div class="card-thumb">
                        <img src="@(Url.Content("~/img/campaigns/placeholder2.png"))" alt="O Princípio" />
                    </div>
                    <div class="card-info">
                        <h5 class="card-title">O Princípio</h5>
                        <p class="card-desc">Uma campanha diferente de tudo que você já viu...</p>
                        <div class="tags">
                            <span class="tag">Fantasia</span>
                            <span class="tag">Aventura</span>
                            <span class="tag">Alta-Fantasia</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-10 mb-4">
                <div class="horizontal-card">
                    <div class="card-thumb">
                        <img src="@(Url.Content("~/img/campaigns/placeholder2.png"))" alt="Guerras Galácticas" />
                    </div>
                    <div class="card-info">
                        <h5 class="card-title">Guerras Galácticas</h5>
                        <p class="card-desc">Uma aventura pelo cosmos...</p>
                        <div class="tags">
                            <span class="tag">Sci-Fi</span>
                            <span class="tag">Aventura</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Explore mais Mesas de RPG End -->

<!-- Testemunhos dos Players -->
<section class="testimonials section-bg1 section-padding40">
    <div class="container">
        <div class="row justify-content-center text-center mb-40">
            <div class="col-xl-6">
                <h2 class="section-title white-color">Testemunhos dos Players</h2>
                <p class="white-color">Aqui os feedbacks de alguns dos nossos usuários</p>
            </div>
        </div>
        <section class="testimonial-area section-bg1">
            <div class="container">
                <div class="testimonial-wrapper">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-lg-10 col-md-12 col-sm-11">
                            <div class="h1-testimonial-active">
                                <div class="single-testimonial text-center mt-55">
                                    <div class="testimonial-caption">
                                        <img src="@(Url.Content("~/img/icon/quotes-sign.png"))" alt="" class="quotes-sign" />
                                        <p>“Nunca tinha conseguido manter uma campanha por mais de duas sessões...”</p>
                                    </div>
                                    <div class="testimonial-founder d-flex align-items-center justify-content-center">
                                        <div class="founder-img">
                                            <img src="@(Url.Content("~/img/icon/testimonial1.png"))" alt="" class="icon" />
                                        </div>
                                        <div class="founder-text">
                                            <span>Mark</span>
                                            <p>Mestre - Mark_the_Mage</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="single-testimonial text-center mt-55">
                                    <div class="testimonial-caption">
                                        <img src="@(Url.Content("~/img/icon/quotes-sign.png"))" alt="" class="quotes-sign" />
                                        <p>“Me mudei para uma nova cidade e não conhecia ninguém que jogasse RPG...”</p>
                                    </div>
                                    <div class="testimonial-founder d-flex align-items-center justify-content-center">
                                        <div class="founder-img">
                                            <img src="@(Url.Content("~/img/icon/testimonial2.png"))" alt="" class="icon" />
                                        </div>
                                        <div class="founder-text">
                                            <span>D1ce</span>
                                            <p>Jogador - DiceLord42</p>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- h1-testimonial-active -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
<!-- Testemunhos dos Players End -->
