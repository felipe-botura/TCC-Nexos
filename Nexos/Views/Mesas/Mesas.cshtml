@{
    ViewData["Title"] = "Mesas Disponíveis";
}


    <section class="main-header1" aria-labelledby="main-title" style="margin-top: 150px;">
      <h1 id="main-title">Descubra campanhas e Mesas disponíveis</h1>
      <p>Encontre uma campanha sem igual para jogar RPG. Explore campanhas, mesas e one-shots aqui mesmo!</p>
      <button class="border-btn" type="button" aria-label="Criar nova campanha">Criar Campanha</button>
    </section>

    <section class="filters" aria-label="Filtros para pesquisa de campanhas">
      <div class="filter-box" tabindex="0" aria-label="Filtro de gêneros">
        <strong>Gênero</strong>
        <span>Fantasia, Horror, sci-fi mistério, etc...</span>
      </div>
      <div class="filter-box" tabindex="0" aria-label="Filtro de sistemas de jogo">
        <strong>Sistema</strong>
        <span>Dungeons & Dragons, Pathfinder, etc.</span>
      </div>
      <div class="filter-box" tabindex="0" aria-label="Filtro de modalidade">
        <strong>Modalidade</strong>
        <span>Escolha entre presencial ou online</span>
      </div>
      <div class="filter-box" tabindex="0" aria-label="Filtro de categoria">
        <strong>Categoria</strong>
        <span>One-shot, campanha longa, etc...</span>
      </div>
    </section>

